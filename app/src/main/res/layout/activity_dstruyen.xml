<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityDSTruyen">
    <TextView
        android:id="@+id/home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/icons8_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#2196F3"
        android:textSize="25dp"
        android:text="@string/title_dstruyen"
        android:fontFamily="serif"
        android:padding="5dp"
        />
    <ListView
        android:id="@+id/listViewTruyen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tl"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:divider="@color/white"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabthemtruyen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="290dp"
        android:src="@drawable/icon_them"
        android:layout_marginTop="100dp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>